bindsym Mod1+Mod4+o exec $HOME/bin/hass service call scene.turn_on --arguments entity_id=scene.bedroom_evening
bindsym Mod1+Mod4+semicolon exec $HOME/bin/hass service call scene.turn_on --arguments entity_id=scene.bedroom_off

